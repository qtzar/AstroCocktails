---
import type { CollectionEntry } from 'astro:content';
import Rating from '@/components/Rating.astro';
import CocktailLabels from './CocktailLabels.astro';

export interface Props {
  cocktail: CollectionEntry<'cocktails'>;
}

const { cocktail } = Astro.props;
---

<li class="overflow-hidden rounded-lg border border-zinc-300 bg-white/90 shadow transition hover:shadow-lg">
  <a href={`/cocktails/${cocktail.id}`} class="block">
    <img
      src={cocktail.data.image ?? '/placeholder.png'}
      alt={cocktail.data.title}
      class={`w-full h-48 object-cover ${cocktail.data.image ? '' : 'opacity-60 blur-[1px]'}`}
    />

    <div class="p-4">
      <h2 class="font-title text-xl font-semibold">{cocktail.data.title}</h2>
      <Rating rating={cocktail.data.rating} />
      <p class="mt-1 text-sm text-zinc-600">{cocktail.data.description}</p>
    </div>

    <CocktailLabels cocktail={cocktail} />
  </a>
</li>
