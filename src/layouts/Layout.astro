---
import '@/styles/global.css'
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<html lang="en" class="bg-[url('/parchment-texture.png')] bg-repeat text-zinc-800 font-serif">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Cocktail Notebook` : 'Cocktail Notebook'}</title>

        <link rel="icon" type="image/png" href="/favicon.png" />
        <link href="https://fonts.googleapis.com/css2?family=Special+Elite&family=Cormorant+Garamond:wght@400;700&display=swap" rel="stylesheet" />
        </head>

        <body class="min-h-screen flex flex-col">
        <Header/>

        <main class="flex-1">
            <slot />
        </main>

        <Footer/>
        </body>
        </html>
