{
  "name": "astro-cocktails",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro check && astro build && astro preview",
    "astro": "astro",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.14.1",
    "@astrojs/mdx": "^4.2.5",
    "astro": "^5.7.5",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.8.3",
    "astro-relative-links": "^0.4.2",
    "astro-zod-to-json-schema": "^0.0.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-markdownlint": "^0.6.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "markdownlint-cli": "^0.44.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.19.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "lint-staged": {
    "**/*.{astro,js,jsx,ts,cjs,mjs,html,css,scss,md,mdx}": "prettier --write",
    "**/*.{astro,js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": "stylelint --fix",
    "**/*.{md,mdx}": "markdownlint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "content",
          "feat",
          "fix",
          "docs",
          "chore"
        ]
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "bracketSameLine": false,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-astro",
      "stylelint-prettier/recommended",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "plugin",
            "custom-variant",
            "theme"
          ]
        }
      ],
      "no-descending-specificity": null,
      "import-notation": null
    }
  }
}
